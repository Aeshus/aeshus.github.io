---
/* https://github.com/withastro/astro/blob/main/examples/blog/src/components/FormattedDate.astro
 */

interface Props {
  date: Date;
}

let { date } = Astro.props;
---

<time datetime={date.toISOString()}>
  {
    date.toLocaleDateString('en-us', {
      year: 'numeric',
      month: 'short',
      day: 'numeric'
    })
  }
</time>
